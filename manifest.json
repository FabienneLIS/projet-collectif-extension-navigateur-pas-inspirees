{
    "manifest_version": 3,
    "name": "Pomodoro extension",
    "description": "Pomodoro extension",
    "version": "3.0",
    "icons": {
        "48": "img/icon-pomodoro.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popUp.html"
    },

    "permissions": ["scripting", "activeTab", "storage"]
}
